    <version>1.0</version>
    <modelVersion>4.0.0</modelVersion>
    <packaging>war</packaging>
    <name>ssh-base</name>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
            </resource>
        </resources>
        <testSourceDirectory>test</testSourceDirectory>
        <testResources>
            <testResource>
                <directory>test</directory>
            </testResource>
        </testResources>
        <outputDirectory>${project.build.directory}\${project.artifactId}-compile\classes</outputDirectory>
        <testOutputDirectory>${project.build.directory}\${project.artifactId}-compile\classes-test</testOutputDirectory>
        <plugins>
            <!-- Java编译器 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>${encoding}</encoding>
                    <compilerArguments>
                        <extdirs>E:/Java/JDK8/jre/lib/ext;E:/Server/Tomcat/apache-tomcat-8.0.26/lib;</extdirs>
                    </compilerArguments>
                </configuration>
            </plugin>

            <!--设置 执行package 时跳过 单元测试环节-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <!--执行package 时跳过 单元测试环节,命令方式：mvn install -Dmaven.test.skip=true-->
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>

            <!-- War包 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <!--Web输出目录-->
                    <webappDirectory>${project.build.directory}\${project.artifactId}-web</webappDirectory>
                    <!--Web源码目录-->
                    <warSourceDirectory>${basedir}\web</warSourceDirectory>
                    <!--war包要输出的目录-->
                    <outputDirectory> ${project.build.directory}</outputDirectory>
                </configuration>
            </plugin>

            <!-- Jar包 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <!-- Jar包输出目录 -->
                    <!-- Jar包编译目录默认使用 outputDirectory配置-->
                    <!-- Jar测试包编译目录默认使用 testOutputDirectory-->
                    <outputDirectory>${project.build.directory}</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <!-- 会输出测试包 -->
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- JavaDoc -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <charset>${encoding}</charset>
                    <encoding>${encoding}</encoding>
                    <failOnError>false</failOnError>
                    <outputDirectory>${project.build.directory}\${project.artifactId}-apidocs</outputDirectory>
                    <reportOutputDirectory>${project.build.directory}\${project.artifactId}-apidocs</reportOutputDirectory>
                </configuration>
            </plugin>

            <!-- Site报告 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <configuration>
                    <outputEncoding>${encoding}</outputEncoding>
                    <outputDirectory>${project.build.directory}\${project.artifactId}-site</outputDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>
